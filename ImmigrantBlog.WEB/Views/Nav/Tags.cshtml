@model IEnumerable<ImmigrantBlog.WEB.Models.TagModel>

@foreach (var link in Model)
{
    @Html.RouteLink(
    link.Name, new
    {
        controller = "Post",
        action = "PostsForTag",
        tag = link.UrlSlug,
        page = 1
    }, new
    {
        @class = "btn  btn-block btn-default btn-lg"
        + (link.UrlSlug == ViewBag.SelectedTag ? " btn-primary" : "")
    }
    )
}
