@using ImmigrantBlog.WEB.Models
@model CommentModel


@using (Html.BeginForm("EditModal", "Comment", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id, htmlAttributes: new { @class = "" })
    @Html.HiddenFor(model => model.PostId, htmlAttributes: new { @class = "" })
    @Html.HiddenFor(model => model.ResponsToCommentId, htmlAttributes: new { @class = "" })
    @Html.HiddenFor(model => model.IsPublished, htmlAttributes: new { @class = "" })

    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
}
